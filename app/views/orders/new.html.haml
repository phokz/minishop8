= form_with model: @order do |form| 
  - if @order.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.each do |error|
          %li= error.full_message
  %div
    = form.text_field :firstname,  placeholder: "First Name", class: "w-full px-4 py-2 my-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
  %div
    = form.text_field :lastname, placeholder: "Last Name", class: "w-full px-4 py-2  my-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
  %div
    = form.text_field :email, placeholder: 'Email', class: "w-full px-4 py-2 border  my-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
  %div
    = form.text_field :phone, placeholder: 'Phone', class: "w-full px-4 py-2 border  my-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
  %div
    = form.label :quantity, style: "display: block"
    = form.number_field :quantity, in: 1..33, step: 1, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
  %div
    = form.label :packettery_branch_id, style: "display: block"
    = form.number_field :packettery_branch_id
    %button{onclick: "Packeta.Widget.pick('', packettery_callback); return false", class: "px-6 py-3 bg-gray-700 text-white rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-500"}
      Select packettery branch
  %div#selected_packettery_name
  %div.justify-center.flex.mt-4
    = form.submit class: 'px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500'

