%h1 new order

= form_with model: @order do |form| 
  - if @order.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :firstname, style: "display: block"
    = form.text_field :firstname
  %div
    = form.label :lastname, style: "display: block"
    = form.text_field :lastname
  %div
    = form.label :email, style: "display: block"
    = form.text_field :email
  %div
    = form.label :phone, style: "display: block"
    = form.text_field :phone
  %div
    = form.label :quantity, style: "display: block"
    = form.number_field :quantity, in: 1..33, step: 1
  %div
    = form.label :packettery_branch_id, style: "display: block"
    = form.number_field :packettery_branch_id
    %button{onclick: "Packeta.Widget.pick('', packettery_callback); return false"}
      Select packettery branch
  %div#selected_packettery_name
  %div
    = form.submit

